#include "../include/main.h"




void printGame (PGAME game){

	printf("\n");
	int i;
	int a = 0;
	int b = 0;
	int row = 0;
	printf("%d%d|",a,b);
	for(i=0;i<32;i++){

/*		if (i % 4 == 0){*/
/*			printf("%d  ", i/4);*/
/*		*/
/*		}*/   //interface criada joao...................
				
		if (row == 0 || row % 2 == 0)
			printBlankSquare();
		

		printSquareWithPiece(pieceAtPosition(game, bitboardForRealPosition[i]));

		if (row % 2 == 1)
			printBlankSquare();
		
		if ((i+1)%4 == 0){

			b = b +4;
			if (b >= 10) {
				b = b -10;
				a = a + 1;
			}

			
			
			if (b!=0) {
				printf("|%d%d",a,b-1);

			}else {
				printf("|%d%d",a,0);
			}


			
			row++;
			printf("\n");
			if (a!=3){
				printf("%d%d|",a,b);
			}
		}



	}
/*	printf("\n");*/
/*	printf("  a  b  c  d  e  f  g  h");*/  //parte de joao interface ...........
	printf("\n");	
	
}


int printBitboard (unsigned bitboard){
	
	printf("\n");
	int i, position;
	int a = 0;
	int b = 0;
	printf("%d%d|",a,b);
	for(i=0;i<32;i++){
		
		if (i == 0 || (i)%8==0)
			printf(" ");
		
		if (bitboard & bitboardForRealPosition[i]){
/*			printf("\n i =======%i \n", i);*/
			position = i;	//ver a posicao da peÃ§a no array(0 a 31)		
/*			printf("1 ");*/
		}
		else
/*			printf("0 ");*/
		
		
		if ((i+1)%4 == 0){
			b = b +4;
			if (b >= 10) {
				b = b -10;
				a = a + 1;
			}
			

			printf("\n");
			
			if (a!=3)
			printf("%d%d|",a,b);
		}
	}
		printf("\n");
	return position;
}


void printSquareWithPiece(char piece) {

	printf ("[%c]",piece);
	return;
}

void printBlankSquare(){

	printf("   ");
	return;
}



